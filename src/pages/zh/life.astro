    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .life-image:hover img {
    transform: scale(1.03);
  }

  .life-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-icon {
    font-size: 4rem;
    opacity: 0.4;
  }

