---
import Layout from '../../../layouts/Layout.astro';
import { t } from '../../../i18n/translations';

const lang = 'zh';

const posts = [
  {
    title: "让我持续前进的力量",
    date: "2026-02-07",
    type: "share",
    slug: "the-force-that-keeps-me-moving",
    excerpt: "一个简单的数字改变了一切。三万天。这就是一个人一生大概拥有的天数。这个认知重塑了我对生活、工作和时间的理解。",
    image: "/images/theforCETHATKEEPSMEmoving.jpg",
    comingSoon: false
  },
  {
    title: "为什么我选择公开构建",
    date: "2026-02-01",
    type: "reflection",
    slug: "building-in-public",
    excerpt: "选择公开记录一切并不容易。这是我选择透明而非完美的原因，以及我希望从中获得什么。",
    image: "/images/buildinpujblic.png",
    comingSoon: false
  },
  {
    title: "Steplify 教会我的关于产品市场匹配的一切",
    date: "2026-01-20",
    type: "product-thought",
    slug: "steplify-pmf",
    excerpt: "我的创业失败了。但关于倾听用户、把握时机、以及信念与验证之间差距的教训，比任何成功都更有价值。",
    comingSoon: true
  }
];

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getTypeLabel(type: string): string {
  const labels: Record<string, string> = {
    'note': '随笔',
    'reflection': '反思',
    'share': '分享',
    'product-thought': '产品',
    'ai-commentary': 'AI',
    'learning-log': '学习日志'
  };
  return labels[type] || type;
}
---

<Layout title={t(lang, 'writing.title')} lang={lang}>
  <div class="container">
    <div class="page-header fade-in">
      <h1>{t(lang, 'writing.title')}</h1>
      <p class="subtitle">{t(lang, 'writing.subtitle')}</p>
    </div>

    <p class="writing-intro fade-in">{t(lang, 'writing.intro')}</p>

    <div class="posts">
      {posts.map((post) => (
        post.comingSoon ? (
          <article class="post-card coming-soon fade-in">
            <div class="post-body">
              <div class="post-meta">
                <span class="tag">{getTypeLabel(post.type)}</span>
                <span class="coming-soon-badge">待发布</span>
              </div>
              <h2 class="post-title">{post.title}</h2>
              <p class="post-excerpt">{post.excerpt}</p>
            </div>
          </article>
        ) : (
          <a href={`/zh/writing/${post.slug}/`} class="post-link">
            <article class="post-card fade-in">
              {post.image && (
                <div class="post-image">
                  <img src={post.image} alt={post.title} loading="lazy" />
                </div>
              )}
              <div class="post-body">
                <div class="post-meta">
                  <span class="tag">{getTypeLabel(post.type)}</span>
                  <span class="post-date">{formatDate(post.date)}</span>
                </div>
                <h2 class="post-title">{post.title}</h2>
                <p class="post-excerpt">{post.excerpt}</p>
              </div>
            </article>
          </a>
        )
      ))}
    </div>
  </div>
</Layout>

<style>
  .writing-intro {
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: 2.5rem;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 2rem;
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-slow);
    cursor: pointer;
  }

  .post-body {
    padding: 1.75rem 2rem;
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-link:hover .post-card {
    transform: translateY(-3px);
    box-shadow: 0 16px 48px rgba(28, 25, 23, 0.1);
    border-color: var(--color-accent);
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-card.coming-soon {
    opacity: 0.6;
    cursor: default;
  }

  .post-card.coming-soon:hover {
    transform: none;
    box-shadow: none;
  }

  .coming-soon-badge {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-text-light);
    background: var(--color-bg-alt);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  .post-title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .post-excerpt {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
  }
</style>

