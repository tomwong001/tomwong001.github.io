---
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n/translations';

const lang = 'en';

const sections = [
  {
    title: "Fitness & Discipline",
    content: "Training consistently is non-negotiable. It's not about aesthetics â€” it's about building the discipline that carries into everything else. The gym is where I practice showing up, especially on days I don't want to.",
    image: null,
    accent: "01"
  },
  {
    title: "Music & Performance",
    content: "Music has been part of my life since I can remember. I play the erhu (a Chinese traditional instrument), sing at a semi-professional level, and am learning guitar. Street busking is one of my favorite ways to connect with people â€” raw, unfiltered, and completely honest.",
    image: "/images/me_play_erhu_on_stage.JPG",
    imageAlt: "Tom playing erhu on stage",
    accent: "02"
  },
  {
    title: "Reading & Reflection",
    content: "I read across categories â€” product design, psychology, AI, business, philosophy. Reading is input. Writing is output. The combination is how I make sense of the world and form my own thinking.",
    image: "/images/writing.png",
    imageAlt: "Writing and reflection",
    accent: "03"
  }
];
---

<Layout title={t(lang, 'life.title')} lang={lang}>
  <div class="container">
    <div class="page-header fade-in">
      <h1>{t(lang, 'life.title')}</h1>
      <p class="subtitle">{t(lang, 'life.subtitle')}</p>
    </div>

    <div class="life-sections">
      {sections.map((section, i) => (
        <article class:list={['life-section', 'fade-in', { 'reverse': i % 2 !== 0 }]}>
          <div class="life-text">
            <span class="life-number">{section.accent}</span>
            <h2>{section.title}</h2>
            <p>{section.content}</p>
          </div>
          {section.image ? (
            <div class="life-image">
              <img src={section.image} alt={section.imageAlt} loading="lazy" />
            </div>
          ) : (
            <div class="life-image life-image-placeholder">
              <span class="placeholder-icon">ðŸ’ª</span>
            </div>
          )}
        </article>
      ))}
    </div>
  </div>
</Layout>

<style>
  .life-sections {
    display: flex;
    flex-direction: column;
    gap: 4rem;
    padding-bottom: 3rem;
  }

  .life-section {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .life-section.reverse {
    direction: rtl;
  }

  .life-section.reverse > * {
    direction: ltr;
  }

  .life-number {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-accent);
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .life-text h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    font-family: 'Playfair Display', var(--font-serif);
  }

  .life-text p {
    color: var(--color-text-muted);
    line-height: 1.8;
    margin: 0;
    font-size: 1rem;
  }

  .life-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 4 / 3;
    background: var(--color-bg-alt);
  }

  .life-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .life-image:hover img {
    transform: scale(1.03);
  }

  .life-image-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-icon {
    font-size: 4rem;
    opacity: 0.4;
  }

  @media (max-width: 768px) {
    .life-section {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .life-section.reverse {
      direction: ltr;
    }

    .life-image {
      aspect-ratio: 16 / 9;
    }
  }
</style>
