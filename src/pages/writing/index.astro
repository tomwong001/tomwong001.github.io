---
import Layout from '../../layouts/Layout.astro';
import { t, getLocalePath } from '../../i18n/translations';

const lang = 'en';

// Sample posts data - in a real setup these would come from markdown content collections
const posts = [
  {
    title: "The Force That Keeps Me Moving",
    date: "2026-02-07",
    type: "share",
    slug: "the-force-that-keeps-me-moving",
    excerpt: "A simple number changed everything. Thirty thousand days. That's roughly how many days a human life has. This realization reshaped how I live, work, and think about time.",
    image: "/images/theforCETHATKEEPSMEmoving.jpg",
    comingSoon: false
  },
  {
    title: "Why I'm Building in Public",
    date: "2026-02-01",
    type: "reflection",
    slug: "building-in-public",
    excerpt: "The decision to document everything publicly wasn't easy. Here's why I chose transparency over polish, and what I hope to gain from it.",
    image: "/images/buildinpujblic.png",
    comingSoon: false
  },
  {
    title: "What Steplify Taught Me About Product-Market Fit",
    date: "2026-01-20",
    type: "product-thought",
    slug: "steplify-pmf",
    excerpt: "My startup failed. But the lessons about listening to users, timing, and the gap between conviction and validation are worth more than any success.",
    comingSoon: true
  }
];

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}

function getTypeLabel(type: string): string {
  const labels: Record<string, string> = {
    'note': 'Note',
    'reflection': 'Reflection',
    'share': 'Share',
    'product-thought': 'Product',
    'ai-commentary': 'AI',
    'learning-log': 'Learning Log'
  };
  return labels[type] || type;
}
---

<Layout title={t(lang, 'writing.title')} lang={lang}>
  <div class="container">
    <div class="page-header fade-in">
      <h1>{t(lang, 'writing.title')}</h1>
      <p class="subtitle">{t(lang, 'writing.subtitle')}</p>
    </div>

    <p class="writing-intro fade-in">{t(lang, 'writing.intro')}</p>

    <div class="posts">
      {posts.map((post) => (
        post.comingSoon ? (
          <article class="post-card coming-soon fade-in">
            <div class="post-body">
              <div class="post-meta">
                <span class="tag">{getTypeLabel(post.type)}</span>
                <span class="coming-soon-badge">Coming Soon</span>
              </div>
              <h2 class="post-title">{post.title}</h2>
              <p class="post-excerpt">{post.excerpt}</p>
            </div>
          </article>
        ) : (
          <a href={`/writing/${post.slug}/`} class="post-link">
            <article class="post-card fade-in">
              {post.image && (
                <div class="post-image">
                  <img src={post.image} alt={post.title} loading="lazy" />
                </div>
              )}
              <div class="post-body">
                <div class="post-meta">
                  <span class="tag">{getTypeLabel(post.type)}</span>
                  <span class="post-date">{formatDate(post.date)}</span>
                </div>
                <h2 class="post-title">{post.title}</h2>
                <p class="post-excerpt">{post.excerpt}</p>
              </div>
            </article>
          </a>
        )
      ))}
    </div>
  </div>
</Layout>

<style>
  .writing-intro {
    color: var(--color-text-muted);
    font-style: italic;
    margin-bottom: 2.5rem;
    font-size: 1.05rem;
    line-height: 1.7;
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 2rem;
  }

  .post-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .post-card {
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-slow);
    cursor: pointer;
  }

  .post-body {
    padding: 1.75rem 2rem;
  }

  .post-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-link:hover .post-card {
    transform: translateY(-3px);
    box-shadow: 0 16px 48px rgba(28, 25, 23, 0.1);
    border-color: var(--color-accent);
  }

  .post-link:hover .post-image img {
    transform: scale(1.05);
  }

  .post-card.coming-soon {
    opacity: 0.6;
    cursor: default;
  }

  .post-card.coming-soon:hover {
    transform: none;
    box-shadow: none;
  }

  .coming-soon-badge {
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--color-text-light);
    background: var(--color-bg-alt);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
  }

  .post-date {
    font-size: 0.8rem;
    color: var(--color-text-light);
  }

  .post-title {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    letter-spacing: -0.02em;
  }

  .post-excerpt {
    color: var(--color-text-muted);
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
  }
</style>

